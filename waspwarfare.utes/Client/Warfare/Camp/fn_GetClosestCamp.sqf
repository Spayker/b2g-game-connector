/*	Return the closest depot of the given entitie.	 Parameters:		- Object		- Range		- Ignore camp side ID*/private ["_closest","_near","_pos","_range"];params ["_pos", "_range", ["_ignore_side", false]];_closest = objNull;_near = nearestObjects [_pos, [WF_C_CAMP], _range];{	if !(isNil {_x getVariable "sideID"}) then {		if (!isObjectHidden _x) then {			if (_ignore_side) then {				_closest = _x;			} else {				if ((_x getVariable "sideID") == sideID) then {_closest = _x;};			};		};	};} forEach _near;_closest