/*	Return the closest depot of the given entitie.	 Parameters:		- Object*/Private ["_closest","_near","_pos","_range"];_closest = objNull;_pos = getPos (_this select 0);_range = _this select 1;_friendlySides = WF_Client_Logic getVariable ["wf_friendlySides", []];_friendlySideIds = [];{    _friendlySideIds pushBack (_x Call WFCO_FNC_GetSideID)} forEach _friendlySides;_near = nearestObjects [_pos, WF_Logic_Depot, _range];{    if !(isNil {_x getVariable "sideID"}) then {        if ((_x getVariable "sideID") in _friendlySideIds) then {           _closest = _x        }    }} forEach _near;_closest