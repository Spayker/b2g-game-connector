/*	Return the closest depot of the given entitie.	 Parameters:		- Object		- Range		- Ignore camp side ID*/private ["_closest","_near","_pos","_range","_sideID"];params ["_pos", "_range", ["_ignore_side", false]];_closest = objNull;_near = nearestObjects [_pos, WF_C_CAMP_SEARCH_ARRAY, _range];_logic = (WF_Client_SideJoined) Call WFCO_FNC_GetSideLogic;_friendlySides = _logic getVariable ["wf_friendlySides", []];{    _side = _x;    _sideID = (_side) Call WFCO_FNC_GetSideID;{	if !(isNil {_x getVariable "sideID"}) then {		if (!isObjectHidden _x) then {			if (_ignore_side) then {				_closest = _x;			} else {                    if ((_x getVariable "sideID") == _sideID) exitWith {_closest = _x;};			};		};	};    } forEach _near} forEach _friendlySides;_closest